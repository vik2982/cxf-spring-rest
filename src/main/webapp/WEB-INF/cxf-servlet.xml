<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://cxf.apache.org/jaxrs
		http://cxf.apache.org/schemas/jaxrs.xsd">

	<!-- do not use import statements if CXFServlet init parameters link to 
		this beans.xml -->

	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

	<jaxrs:server id="additionService">
		<jaxrs:serviceBeans>
			<ref bean="additionServiceImpl" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<bean class="org.apache.cxf.jaxrs.provider.json.JSONProvider">
				<!-- <property name="dropRootElement" value="true" /> -->
				<property name="supportUnwrapped" value="true" />
			</bean>
		</jaxrs:providers>
	</jaxrs:server>

	<bean id="additionServiceImpl" class="com.va.cxf.rest.AdditionServiceImpl">
		<property name="addition" ref="addition" />
		<property name="calculator" ref="calculatorImpl" />
	</bean>

	<bean id="addition" class="com.va.cxf.rest.model.Addition" />

	<bean id="calculatorImpl" class="com.va.cxf.rest.calc.CalculatorImpl" />

</beans>
